[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity (cyclomatic complexity)
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    .tox,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Ignore specific errors
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # E402: module level import not at top of file (sometimes needed)
    E402

# Select specific errors to check
select = 
    E,
    W,
    F,
    C,
    N

# Per-file ignores
per-file-ignores =
    # Allow imports at top only in __init__.py files
    __init__.py:F401,F403
    # Allow star imports in test files
    tests/*.py:F405,F403

# Show source code for each error
show-source = True

# Show pep8 violation statistics
statistics = True

# Count the number of occurrences
count = True

# Enable color output
color = auto
