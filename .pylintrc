[MASTER]
# Use multiple processes for faster analysis
jobs=4

# Python version
py-version=3.11

# Ignore patterns
ignore=CVS,.git,__pycache__,.mypy_cache,.pytest_cache

# Python code to execute, usually for sys.path manipulation
init-hook='import sys; sys.path.append(".")'

# Pickle collected data for later comparisons
persistent=yes

# Specify a score threshold to be exceeded before program exits with error
fail-under=8.0

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing-docstring (handled by pydocstyle)
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0511,  # fixme (TODO comments are ok)
    C0103,  # invalid-name (sometimes needed)
    too-many-locals,
    too-many-branches,
    too-many-statements,
    line-too-long,
    bad-whitespace,
    missing-module-docstring,
    no-member,
    unsubscriptable-object

[REPORTS]
output-format=colorized
reports=no
score=yes

[FORMAT]
max-line-length=100
string-quote=double-quote-or-single-quote

[BASIC]
good-names=i,j,k,f,_,id,db
argument-rgx=[a-z_][a-z0-9_]{1,30}$
variable-rgx=[a-z_][a-z0-9_]{1,30}$

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-attributes=10

[SIMILARITIES]
min-similarity-lines=4

[TYPECHECK]
ignored-modules=yaml

[IMPORTS]
allow-wildcard-with-all=no
